<!-- Head -->
<%- include("../partials/head.ejs") %>

<body class="body-editProduct">
  
  <!-- Header -->
  <%- include("../partials/header.ejs")%>
  
  <div class="login-container-editProduct">
    <div class="form-registro-editProduct">
      
      <h1>Editar Producto</h1>
      
      <form  action="/products/productEdit/<%= product.id %>?_method=PUT" method="POST" >
        <div class="form-group-editProduct">
          <div class="input-container">
          <label class="label-general-editProduct" for="marca">Marca</label>
          <input
            class="input-general-editProduct alerta icono"
            type="text"
            id="marca"
            name="marca"
            placeholder=""
            value="<%= product.marca %>"
            required
            
          />
          
        </div>
        </div>
        
        <div class="form-group-editProduct">
          <label class="label-general-editProduct" for="modelo">Modelo</label>
          <div class="input-container">
          <input
            class="input-general-editProduct"
            type="text"
            id="modelo"
            name="modelo"
            placeholder=""
            value="<%= product.modelo %>"
            required
          />
         
        </div>
        </div>

        <div class="form-group-editProduct">
          <label class="label-general-editProduct" for="precio">Precio</label>
          <div class="input-container">
          <input
            class="input-general-editProduct"
            type="number"
            id="precio"
            name="precio"
            placeholder=""
            value="<%= product.precio %>"
            required
          />
          
        </div>
        </div>

        <div class="form-group-editProduct">
          <label class="label-general-editProduct" for="almacenamiento">Almacenamiento</label>
          <div class="input-container">
          <input
            class="input-general-editProduct"
            type="number"
            id="almacenamiento"
            name="almacenamiento"
            placeholder=""
            value="<%= product.almacenamiento %>"
            required
          />
        </div>
        </div>

        <div class="form-group-editProduct">
          <label class="label-general-editProduct" for="ram">RAM</label>
          <div class="input-container">
          <input
            class="input-general-editProduct"
            type="number"
            id="ram"
            name="ram"
            placeholder=""
            value="<%= product.ram %>"
            required
          />
        </div>
        </div>

        <div class="form-group-editProduct">
          <label class="label-general-editProduct" for="so">Sistema Operativo</label>
          <div class="input-container">
          <input
            class="input-general-editProduct"
            type="text"
            id="so"
            name="so"
            placeholder=""
            value="<%= product.so %>"
            required
          />
        </div>
        </div>

        <div class="form-group-editProduct">
          <label class="label-general-editProduct" for="descripcion">Descripci√≥n</label>
          <div class="input-container">
          <textarea 
            class="input-general-editProduct"
            name="descripcion" 
            id="descripcion" 
            cols="30" 
            rows="10"
            placeholder=""
            required
          ><%= product.descripcion %></textarea>
        </div>
        </div>
        
        <button class="editProduct button-editProduct" type="submit">Actualizar Producto</button>
        
      </form>
    </div>
  </div>

  <!-- Footer -->
  <%- include("../partials/footer.ejs")%>
  
</body>
</html>