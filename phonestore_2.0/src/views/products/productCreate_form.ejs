<!-- Head -->
<%- include("../partials/head.ejs") %>

<!-- Header -->
<%- include("../partials/header.ejs") %>

<body class="body-createProduct">
   
    <div class="login-container-createProduct">
      
       
        <div class="form-registro-createProduct">
            <h1>Crear Producto</h1>

            <form action="/products/productCreate_form" method="POST" enctype="multipart/form-data">
          
              
                <div class="form-group-createProduct">
                    <label class="label-general-createProduct" for="name">Modelo:</label>
                    <input class="input-general-createProduct" type="text" id="name" name="modelo" required>
                </div>         

                <div class="form-group-createProduct">
                    <label class="label-general-createProduct" for="image">Imágenes:</label>
                    <input class="input-general-createProduct" type="file" id="image" name="image" accept="image/*" multiple required>
                </div>

                <div class="form-group-createProduct">  
                    <label class="label-general-createProduct" for="category">Marca</label>                 
                    <select class="input-general-createProduct" name="marca">
                        <option value="0">Seleccione una marca</option>
                        <option value="Samsung">Samsung</option>
                        <option value="Motorola">Motorola</option>
                        <option value="LG">LG</option>
                        <option value="Xiaomi">Xiaomi</option>
                        <option value="Iphone">Iphone</option>
                    </select>
                </div>

                <div class="form-group-createProduct">
                    <label class="label-general-createProduct" for="price">Precio:</label>
                    <input class="input-general-createProduct" type="number" id="price" name="precio" required>
                </div>

                <div class="form-group-createProduct">
                    <label class="label-general-createProduct" for="description">Descripción:</label>
                    <textarea class="input-general-createProduct" id="description" name="descripcion"  cols="30" 
                    rows="10" required></textarea>
                </div>
                <div class="form-group-createProduct">
                    <label class="label-general-createProduct" for="price">Almacenamiento:</label>
                    <input class="input-general-createProduct" type="number" id="almacenamiento" name="almacenamiento" required>
                </div>

                <div class="form-group-createProduct">
                    <label class="label-general-createProduct" for="price">Ram:</label>
                    <input class="input-general-createProduct" type="number" id="ram" name="ram" required>
                </div>

                <div class="form-group-createProduct">
                    <label class="label-general-createProduct" for="name">Sistema operativo:</label>
                    <input class="input-general-createProduct" type="text" id="so" name="so" required>
                </div>   

                <button class="createProduct button-createProduct" type="submit">Crear Producto</button>
            </form>
        </div>
    </div>
    <!-- Footer -->
<%- include("../partials/footer.ejs") %>
</body>

</html>