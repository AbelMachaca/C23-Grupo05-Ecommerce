<!-- Head -->
<%- include("../partials/head.ejs") %>
  
<body class="contenedor_body_dashboard">
  
    
    <h2>Lista de Productos</h2>
  <table>
    <thead>
        <tr>
        <th>ID</th>
        <th>Marca</th>
        <th>Imagen</th>
        <th>Modelo</th>
        <th>Precio</th>
        <th>Almacenamiento</th>
        <th>Ram</th>
        <th>So</th>
        <th>Descripci√≥n</th>
        <th>Acciones</th>
      </tr>
      </thead>
    <tbody>
      <% products.forEach(element => { %>
        <tr>
          <td><%=element.id_Producto%></td>
          <td><%=element.marca%></td>
          <td><% if (element.imagenes_productos && element.imagenes_productos.length > 0) { %>
            <img src="/images/imageHome/<%= element.imagenes_productos[0].url_de_imagen %>" alt="<%= element.marca %>">
          <% } else { %>
            <img src="/images/placeholder.jpg" alt="Sin imagen">
          <% } %></td>
          <td><%=element.modelo%></td>
          <td><%=element.precio%></td>
          <td><%=element.almacenamiento%></td>
          <td><%=element.ram%></td>
          <td><%=element.so%></td>
          <td><%=element.descripcion%></td>
          <td>
            <a href="/products/productEdit/<%= element.id_Producto %>">Editar</a>
            <a href="/products/productEdit/<%= element.id_Producto %>">Actualizar</a>
            <form action="/products/delete/<%= element.id%>?_method=delete" method="post">
              <button type="submit">Eliminar</button>
            </form>  
          </td>
        </tr>
        <% }) %>
    </tbody>
   </table>
  <form action="/create" method="post">
<a href="/products/productCreate_form">Crear Producto</a>
</form>
</body>
</html>
