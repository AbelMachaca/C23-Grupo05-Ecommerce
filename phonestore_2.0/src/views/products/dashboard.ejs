<!-- Head -->
<%- include("../partials/head.ejs") %>
  
<body class="contenedor_body_dashboard">
  
    
    <h2>Lista de Productos</h2>
  <table>
    <thead>
        <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Imagen</th>
        <th>Detalles</th>
        <th>Acciones</th>
      </tr>
      </thead>
    <tbody>
      <% products.forEach(element => { %>
        <tr>
          <td><%=element.id%></td>
          <td><%=element.modelo%></td>
          <td><img src="/images/imageHome/<%= element.imagen_usuario %>" alt="<%= element.name %>"></td>
          <td><%=element.descripcion%></td>
          <td>
            <a href="/products/productEdit/<%= element.id %>">Editar</a>
            <a href="/products/productEdit/<%= element.id %>">Actualizar</a>
            <form action="/products/delete/<%= element.id%>?_method=delete" method="post">
              <button type="submit">Eliminar</button>
            </form>  
          </td>
        </tr>
        <% }) %>
    </tbody>
   </table>
  <form action="/create" method="post">
<a href="/products/productCreate_form">Crear Producto</a>
</form>
</body>
</html>
