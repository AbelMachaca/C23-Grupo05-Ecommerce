<!-- Head -->
<%- include("../partials/head.ejs") %>
  
<body class="contenedor_body_dashboard">
  <h2>Lista de Productos</h2>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Imagen</th>
        <th>Detalles</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% products.forEach(element => { %>
        <tr>
          <td><%= element.id %></td>
          <td><%= element.name %></td>
          <td><%= element.image %><img src="" alt=""></td>
          <td><%= element.description %></td>
          <td>
            <a href="/products/productEdit/<%= element.id %>">Editar</a>
            <a href="/products/productEdit/<%= element.id %>">Actualizar</a>
            <a href="/delete/">Eliminar</a>
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>
  <form action="/create" method="post">
<a href="/products/productEdit">Crear Producto</a>
</form>
</body>
</html>
