<!-- Head -->
<%- include("../partials/head.ejs") %>

  <body class="body_login">
    <div class="logo_phonestore_login">
      <a href="/"><img class="img-general" src="/images/register-img/logo.png" alt="imagen logo">
      </a>   
    </div>
    <div class="login-container-body">
      <i class="fa-solid fa-bars"></i>
      <img src="/images/login-img/login.png" alt="imagen login" />
      <h3>Bienvenid@</h3>
      <form>
        <div class="form-group-login">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="Ingresa tu email"
            required
          />
        </div>
        <div class="form-group-login">
          <label for="password">Contraseña</label>
          <div class="password-container">
            <input
              type="password"
              id="password"
              name="password"
              placeholder="Ingresa tu contraseña"
              required
            />
            <i class="fa-solid fa-eye eye-icon"></i>
          </div>
        </div>
        <div class="form-group-login">
          <a href="#">¿Has olvidado tu contraseña?</a>
        </div>
        <button class="boton-inicia-sesion" type="submit">Iniciar sesión</button>
      </form>
      <h6>O inicia sesión con</h6>
      <div class="social-buttons-login">
        <button>Google</button><i class="fa-brands fa-google"></i>
        <button>Facebook</button><i class="fa-brands fa-facebook"></i>
      </div>
    </div>
  </body>
</html>
