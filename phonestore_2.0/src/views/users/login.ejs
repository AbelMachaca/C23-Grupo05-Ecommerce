<!-- Head -->
<%- include("../partials/head.ejs") %>

<body >
  <!-- Header -->
  <%- include("../partials/header.ejs")%>
  <div class="contenedor_logo_form">
  <div class="logo_phonestore_login">
    <a href="/"><img class="img-general" src="/images/register-img/logo.png" alt="imagen logo"></a>
  </div>
  
  <div class="login-container-body">
    <img src="/images/login-img/login.png" alt="imagen login" />
    <h3>Bienvenid@</h3>
    <form action="/users/login" method="post" class="form_login">
      <div class="form-group-login">
        <label for="email">Correo Electrónico</label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="Ingresa tu correo electrónico"
          value="<%= locals.old && old.email %>"
        />
        <p class="errors_form_edit_user">
          <%= locals.errores && errores.email ? errores.email.msg : null %>
        </p>
      </div>
      <div id="mensaje_email" class="errors_form_edit_user"></div>
      <div class="form-group-login">
        <label for="password">Contraseña</label>
        <div class="password-container-login">
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Ingresa tu contraseña"
            value="<%= locals.old && old.password %>"
          />
          <p class="errors_form_edit_user">
            <%= locals.errores && errores.password ? errores.password.msg : null %>
          </p>
        </div>
      </div>
      <div id="mensaje_password" class="errors_form_edit_user"></div>
      <div class="form-group-login">
        <a href="#">¿Olvidaste tu contraseña?</a>
      </div>
      <div class="input-rememberMe">
        <input type="checkbox" id="remember" name="remember" value="true">
        <label for="remember">Recuérdame</label>
      </div>
      <button class="boton-inicia-sesion" type="submit" value="login">Iniciar sesión</button>
    </form>
    <!-- Mensaje de error general -->
    <!-- <% if (locals.errores) { %>
      <p class="errors_form_edit_user"><%= locals.errores && errores.email ? errores.email.msg : null %></p>
      <p class="errors_form_edit_user"><%= locals.errores && errores.password ? errores.password.msg : null %></p>
    <% } %> -->
    
    
    <h6>O inicia sesión con</h6>
    <div class="social-buttons-login">
      <button onclick="window.open('https://www.google.com/', '_blank')">Google</button><i class="fa-brands fa-google"></i>
      <button onclick="window.open('https://www.facebook.com/', '_blank')">Facebook</button><i class="fa-brands fa-facebook"></i>
    </div>    
  </div>
</div>
  <!-- Footer -->
  <%- include("../partials/footer.ejs")%>
  <script src="/js/js_front_login.js"></script>
</body>
</html>