<!-- Head -->
<%- include("../partials/head.ejs") %>

<body class="body_login">
  <div class="logo_phonestore_login">
    <a href="/"><img class="img-general" src="/images/register-img/logo.png" alt="imagen logo"></a>
  </div>
  <div class="login-container-body">
    <i class="fa-solid fa-bars"></i>
    <img src="/images/login-img/login.png" alt="imagen login" />
    <h3>Bienvenid@</h3>
    <form action="/users/login" method="post">
      <div class="form-group-login">
        <label for="email">Correo Electrónico</label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="Ingresa tu correo electrónico"
          value="<%= locals.old && old.email %>"
        />
        <% if (locals.errors && errors.email) { %>
          <p class="error-message"><%= errors.email.msg %></p>
        <% } %>
      </div>
      <div class="form-group-login">
        <label for="password">Contraseña</label>
        <div class="password-container">
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Ingresa tu contraseña"
            value="<%= locals.old && old.password %>"
          />
          <% if (locals.errors && errors.password) { %>
            <p class="error-message"><%= errors.password.msg %></p>
          <% } %>
          <i class="fa-solid fa-eye eye-icon"></i>
        </div>
      </div>
      <div class="form-group-login">
        <a href="#">¿Olvidaste tu contraseña?</a>
      </div>
      <button class="boton-inicia-sesion" type="submit" value="login">Iniciar sesión</button>
    </form>
    <!-- Mensaje de error general -->
    <% if (locals.error) { %>
      <p class="error-message"><%= locals.error %></p>
    <% } %>
    <h6>O inicia sesión con</h6>
    <div class="social-buttons-login">
      <button>Google</button><i class="fa-brands fa-google"></i>
      <button>Facebook</button><i class="fa-brands fa-facebook"></i>
    </div>
  </div>
</body>
</html>
