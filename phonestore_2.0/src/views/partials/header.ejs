<header class="header">
    <div>
      <a class="icono_header" href="/"><img src="/images/imageHome/icono.jpg"></a>
      <div class="logo_letras"><a href="/"><img src="/images/imageHome/logo_phonestore1.png"></a></div>
            <section class="buscador">
              <form action="" class="formulario_buscador">
                <input type="text" placeholder="Buscar" class="campo_buscar">
                <i class="fa-solid fa-magnifying-glass"></i>
                <a href="/products/productCart"><i class="fa-solid fa-cart-shopping"></i></a>
              </form>
            </section>
    </div>
    
            <nav class="links">
              <div class="icono_burger">
                <i class="fa-solid fa-bars" style="color: #919191;" onclick="toggleMenu()"></i>
              </div>
              <ul class="lista">
                <li><a href="/" class="boton_header">Samsung</a></li>
                <li><a href="/" class="boton_header">Motorola</a></li>
                <!-- <li><a href="/" class="boton_header">LG</a></li> -->
                <li><a href="/" class="boton_header">Xiaomi</a></li>
                <li><a href="/" class="boton_header">Apple</a></li>
                
                <% if(locals.usuario != undefined){%>
                  <li><a href="/users/profile/<%= usuario.id %>" class="boton_header"><%= usuario.nombre %> - <i class="fa-solid fa-user" style="color: #ffffff;"></i></a></li>
                  
                  <li><a  href="/users/logout" class="boton_header"> Cerrar sesión <i class="fas fa-sign-out-alt" ></i></a></li>
                  <% }else{ %>
                    <li><a href="/users/register" class="boton_header">Creá tu cuenta </a></li>
                    <li><a href="/users/login" class="boton_header">Ingresá </a></li>
             <%}%>
            </ul>
          </nav>
            
                  <script>
                    let lista = document.querySelector(".lista")
                    lista.style.maxHeight = "0px";
            
                    function toggleMenu(){
                        if(lista.style.maxHeight == "0px")
                        {
                            lista.style.maxHeight = "300px";
                        }
                        else{
                            lista.style.maxHeight = "0px";
                        }
                    }
                    
                </script>
</header>